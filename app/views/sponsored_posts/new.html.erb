<h1>New Sponsored Post</h1>

<div class="row">
  <div class = "col-md-4">
    <p>Guidelines for sponsored posts</p>
    <ul>
      <li>Only sell cool stuff.</li>
      <li>No price gouging.</li>
    </ul>
  </div>
</div>

<div class = "col-md-8">
  <%= form_for [@topic, @sponsoredpost] do |f| %>
    <div class = "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter your post title" %>
    </div>

    <div class = "form_group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: "form-control", placeholder: "Enter your post body" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price %>
    <br>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>

</div>
</div>
